# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_public_anon_key_here

# Supabase Service Role Key (for server-side operations, bypasses RLS)
# Find this in: Supabase Dashboard > Settings > API > service_role key
# IMPORTANT: Keep this secret! Never expose to client-side code
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# AI Provider (OpenAI or compatible)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# Optional: Model configuration
AI_MODEL=gpt-4-turbo-preview
